{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmitOnError": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "allowJs": true,
    // "checkJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@vue/*": [
        "packages/*/src"
      ]
    }
  }
}